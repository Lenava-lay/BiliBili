<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登录注册"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="密码登录"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="165dp"
            android:textColor="#645F57"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/edit_line">

        <ImageView
            android:layout_width="117dp"
            android:layout_height="122dp"
            android:background="@drawable/ic_22" />


        <ImageView
            android:id="@+id/iv"
            android:layout_width="120dp"
            android:layout_height="122dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="172dp"
            android:background="@drawable/ic_33" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="中国大陆"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chose_country" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_line">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="+86"
            android:textSize="20sp"
            android:textColor="#000"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="请输入手机号码"
            android:textColor="#888"
            android:padding="10dp"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#888"
            android:textSize="18sp"
            android:padding="5dp"
            android:background="@drawable/edit_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_line">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="验证码"
            android:textSize="20sp"
            android:textColor="#000"/>

        <EditText
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="请输入验证码"
            android:textColor="#888"
            android:padding="10dp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="验证登录"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#FA6BA4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未注册过哔哩哔哩的手机号，我们将自动帮你注册账号"
            android:textSize="15sp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录或完成注册即代表你同意"
            android:textSize="15sp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="#FA6BA4"
            android:textSize="15sp"
            android:layout_marginTop="-21dp"
            android:layout_marginLeft="236dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="和"
            android:textSize="15sp"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="-20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textSize="15sp"
            android:textColor="#FA6BA4"
            android:layout_marginLeft="312dp"
            android:layout_marginTop="-20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="遇到问题？"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="198dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看帮助"
            android:textSize="15sp"
            android:textColor="#FA6BA4"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>